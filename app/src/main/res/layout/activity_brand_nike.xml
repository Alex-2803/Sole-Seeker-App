<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/rectangleShape"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/orange"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="62dp"
        android:layout_height="64dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/orange"
        android:contentDescription="Back Button"
        android:src="@drawable/baseline_arrow_back_ios_new_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/nike_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/nikelogo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/backButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.013" />


    <ImageButton
        android:id="@+id/nikebrandair_Btn"
        android:layout_width="155dp"
        android:layout_height="144dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/btn_rounded"
        android:contentDescription="basketball_1"
        android:paddingBottom="25dp"
        android:paddingRight="30dp"
        android:src="@drawable/nike_air"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nike_logo" />

    <TextView
        android:id="@+id/nikebrandair_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nike Air Force 1"
        android:textSize="18sp"
        android:fontFamily="@font/helveticanowtextbold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/nikebrandair_Btn"
        app:layout_constraintStart_toStartOf="@id/nikebrandair_Btn"
        app:layout_constraintEnd_toEndOf="@id/nikebrandair_Btn"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <!-- Second Button and Text -->
    <ImageButton
        android:id="@+id/nikebrandmamba_Btn"
        android:layout_width="155dp"
        android:layout_height="144dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/btn_rounded"
        android:contentDescription="second_button"
        android:paddingBottom="30dp"
        android:paddingRight="35dp"
        android:src="@drawable/nike_mamba"
        android:paddingLeft="20dp"
        app:layout_constraintStart_toEndOf="@id/nikebrandair_Btn"
        app:layout_constraintTop_toTopOf="@id/nikebrandair_Btn" />

    <TextView
        android:id="@+id/nikebrandmamba_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nike Mamba Fury"
        android:textSize="18sp"
        android:fontFamily="@font/helveticanowtextbold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/nikebrandmamba_Btn"
        app:layout_constraintStart_toStartOf="@id/nikebrandmamba_Btn"
        app:layout_constraintEnd_toEndOf="@id/nikebrandmamba_Btn"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <!-- Third Button and Text -->
    <ImageButton
        android:id="@+id/nikebrandgrinch_Btn"
        android:layout_width="155dp"
        android:layout_height="144dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_rounded"
        android:contentDescription="third_button"
        android:paddingBottom="25dp"
        android:paddingRight="40dp"
        android:src="@drawable/nike_grinch"
        android:paddingTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nikebrandair_Text" />

    <TextView
        android:id="@+id/nikebrandgrinch_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nike Kobe Bryant"
        android:textSize="18sp"
        android:fontFamily="@font/helveticanowtextbold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/nikebrandgrinch_Btn"
        app:layout_constraintStart_toStartOf="@id/nikebrandgrinch_Btn"
        app:layout_constraintEnd_toEndOf="@id/nikebrandgrinch_Btn"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />
    <TextView
        android:id="@+id/nikebrand_grinch_text"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Grinch"
        android:textSize="18sp"
        android:fontFamily="@font/helveticanowtextbold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/nikebrandgrinch_Text"
        app:layout_constraintStart_toStartOf="@id/nikebrandgrinch_Btn"
        app:layout_constraintEnd_toEndOf="@id/nikebrandgrinch_Btn"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="8dp" />

    <!-- Fourth Button and Text -->
    <ImageButton
        android:id="@+id/nikebrandzoom_Btn"
        android:layout_width="155dp"
        android:layout_height="144dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/btn_rounded"
        android:contentDescription="fourth_button"
        android:paddingBottom="45dp"
        android:paddingRight="50dp"
        android:src="@drawable/nike_zoom"
        android:paddingLeft="20dp"
        app:layout_constraintStart_toEndOf="@id/nikebrandgrinch_Btn"
        app:layout_constraintTop_toTopOf="@id/nikebrandgrinch_Btn" />

    <TextView
        android:id="@+id/nikebrandzoom_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nike Zoom Air"
        android:textSize="18sp"
        android:fontFamily="@font/helveticanowtextbold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/nikebrandzoom_Btn"
        app:layout_constraintStart_toStartOf="@id/nikebrandzoom_Btn"
        app:layout_constraintEnd_toEndOf="@id/nikebrandzoom_Btn"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/nikebrand_zoom_text"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Pegasus"
        android:textSize="18sp"
        android:fontFamily="@font/helveticanowtextbold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/nikebrandzoom_Text"
        app:layout_constraintStart_toStartOf="@id/nikebrandzoom_Text"
        app:layout_constraintEnd_toEndOf="@id/nikebrandzoom_Text"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="8dp" />


</androidx.constraintlayout.widget.ConstraintLayout>