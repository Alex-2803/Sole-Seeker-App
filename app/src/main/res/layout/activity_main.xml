<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Add elevation to the ViewPager2 -->

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="1dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/solelogo"
        android:layout_width="245dp"
        android:layout_height="191dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="20dp"
        android:contentDescription="solelogo"
        android:elevation="2dp"
        android:src="@drawable/solemalangit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" /> <!-- Add a higher elevation to the ImageView -->

    <!-- ... Your existing layout code ... -->

    <TextView
        android:id="@+id/solemate"
        android:layout_width="380dp"
        android:layout_height="30dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="-160dp"
        android:textAlignment="center"
        android:layout_marginBottom="250dp"
        android:layout_marginEnd="60dp"
        android:text="FIND YOUR PERFECT SOLE MATE"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:elevation="2dp"
        android:fontFamily="@font/montserratalternatessemibolditalic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/solelogo"
        app:layout_constraintBottom_toTopOf="@id/getStartedButton" />

    <ImageButton
        android:id="@+id/getStartedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:src="@drawable/getstartedbtn"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/solemate"
        app:layout_constraintBottom_toBottomOf="parent"
        android:elevation="2dp"/>

    <!-- ... Your existing layout code ... -->


    <LinearLayout
        android:id="@+id/indicatorLayout"
        android:layout_width="39dp"
        android:layout_height="15dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewPager"
        app:layout_constraintVertical_bias="1.0"
        android:elevation="3dp"> <!-- Add a higher elevation to the indicatorLayout -->
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
