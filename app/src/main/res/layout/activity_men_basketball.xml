<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="62dp"
        android:layout_height="64dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/white"
        android:contentDescription="Back Button"
        android:src="@drawable/baseline_arrow_back_ios_new_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/categoriesText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/poppinsbold"
        android:text="Basketball"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/backButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.013" />

    <ImageButton
        android:id="@+id/nike_mamba_Btn"
        android:layout_width="155dp"
        android:layout_height="144dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="540dp"
        android:background="@drawable/btn_rounded"
        android:contentDescription="basketball_1"
        android:paddingBottom="25dp"
        android:paddingRight="20dp"
        android:src="@drawable/nike_mamba"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="H,250:125.4"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/nike_mamba_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nike Mamba Fury"
        android:textSize="18sp"
        android:fontFamily="@font/montserratbold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/nike_mamba_Btn"
        app:layout_constraintStart_toStartOf="@id/nike_mamba_Btn"
        app:layout_constraintEnd_toEndOf="@id/nike_mamba_Btn"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <!-- Second ImageButton and TextView -->

    <ImageButton
        android:id="@+id/nike_grinch_Btn"
        android:layout_width="155dp"
        android:layout_height="141dp"
        android:layout_marginStart="28dp"
        android:background="@drawable/btn_rounded"
        android:contentDescription="another_button"
        android:src="@drawable/nike_grinch"
        android:paddingTop="40dp"
        android:paddingRight="35dp"
        app:layout_constraintBottom_toBottomOf="@id/nike_mamba_Btn"
        app:layout_constraintDimensionRatio="H,250:125.4"
        app:layout_constraintStart_toEndOf="@id/nike_mamba_Btn" />

    <TextView
        android:id="@+id/nike_grinch_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nike Kobe Bryant"
        android:textSize="18sp"
        android:fontFamily="@font/montserratbold"
        android:textColor="@color/black"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/nike_grinch_Btn"
        app:layout_constraintStart_toStartOf="@id/nike_grinch_Btn"
        app:layout_constraintEnd_toEndOf="@id/nike_grinch_Btn"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/nike_grinch_text"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Grinch"
        android:textSize="18sp"
        android:fontFamily="@font/montserratbold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/nike_grinch_Text"
        app:layout_constraintStart_toStartOf="@id/nike_grinch_Btn"
        app:layout_constraintEnd_toEndOf="@id/nike_grinch_Btn"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="8dp" />


</androidx.constraintlayout.widget.ConstraintLayout>