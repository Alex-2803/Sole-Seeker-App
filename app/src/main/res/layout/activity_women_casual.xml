<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="62dp"
        android:layout_height="64dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/white"
        android:contentDescription="Back Button"
        android:src="@drawable/baseline_arrow_back_ios_new_25"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/categoriesText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/poppinsbold"
        android:text="Casual"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/backButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.013" />

    <ImageButton
        android:id="@+id/fila_disruptor_Btn"
        android:layout_width="155dp"
        android:layout_height="144dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="540dp"
        android:background="@drawable/btn_rounded"
        android:contentDescription="basketball_1"
        android:paddingBottom="25dp"
        android:paddingRight="20dp"
        android:src="@drawable/fila_disruptor"
        android:paddingTop="40dp"
        android:paddingLeft="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="H,250:125.4"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/fila_disruptor_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fila Disruptor"
        android:textSize="18sp"
        android:fontFamily="@font/helveticanowtextbold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/fila_disruptor_Btn"
        app:layout_constraintStart_toStartOf="@id/fila_disruptor_Btn"
        app:layout_constraintEnd_toEndOf="@id/fila_disruptor_Btn"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <!-- Second ImageButton and TextView -->

    <ImageButton
        android:id="@+id/skechers_chunky_Btn"
        android:layout_width="155dp"
        android:layout_height="141dp"
        android:layout_marginStart="28dp"
        android:background="@drawable/btn_rounded"
        android:contentDescription="another_button"
        android:src="@drawable/skechers_chunky"
        android:paddingTop="0dp"
        android:paddingRight="25dp"
        android:paddingBottom="25dp"
        app:layout_constraintBottom_toBottomOf="@id/fila_disruptor_Btn"
        app:layout_constraintDimensionRatio="H,250:125.4"
        app:layout_constraintStart_toEndOf="@id/fila_disruptor_Btn" />

    <TextView
        android:id="@+id/skechers_chunky_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skechers Chunky"
        android:textSize="18sp"
        android:fontFamily="@font/helveticanowtextbold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/skechers_chunky_Btn"
        app:layout_constraintStart_toStartOf="@id/skechers_chunky_Btn"
        app:layout_constraintEnd_toEndOf="@id/skechers_chunky_Btn"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <ImageButton
        android:id="@+id/pumabrandkarmen_Btn"
        android:layout_width="155dp"
        android:layout_height="141dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/btn_rounded"
        android:contentDescription="third_button"
        android:src="@drawable/puma_karmen"
        android:paddingTop="30dp"
        android:paddingBottom="20dp"
        android:layout_marginLeft="28dp"
        app:layout_constraintTop_toBottomOf="@id/fila_disruptor_Text"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/pumabrandkarmen_Text"
        android:layout_width="174dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/helveticanowtextbold"
        android:text="Puma Karmen Rebelle Trainers "
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@id/pumabrandkarmen_Btn"
        app:layout_constraintStart_toStartOf="@id/pumabrandkarmen_Btn"
        app:layout_constraintTop_toBottomOf="@id/pumabrandkarmen_Btn" />


</androidx.constraintlayout.widget.ConstraintLayout>

