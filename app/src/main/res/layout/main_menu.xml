<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<ImageView
		android:id="@+id/hello"
		android:layout_width="333dp"
		android:layout_height="145dp"
		android:layout_marginTop="28dp"
		android:contentDescription="screenshot_2023_05_30_19_50_52_421_com_android_1"
		android:src="@drawable/frame33"
		app:layout_constraintDimensionRatio="H,250:125.4"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<ImageView
		android:id="@+id/steppin"
		android:layout_width="355dp"
		android:layout_height="218dp"
		android:contentDescription="image_112"
		android:src="@drawable/image_112"
		app:layout_constraintDimensionRatio="H,300:250"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/hello" />

	<Button
		android:id="@+id/shoeBrandButton"
		android:layout_width="355dp"
		android:layout_height="101dp"
		android:layout_marginTop="12dp"
		android:background="@drawable/btn_rounded"
		android:drawableLeft="@drawable/image_109"
		android:drawablePadding="8dp"
		android:paddingStart="50dp"
		android:text="Shoe Brand"
		android:fontFamily="@font/montserratbold"
		android:textColor="@color/black"
		android:onClick="onClickShoeBrandButton"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.532"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/steppin" />


	<Button
		android:id="@+id/scanBrandButton"
		android:layout_width="354dp"
		android:layout_height="100dp"
		android:layout_marginTop="16dp"
		android:background="@drawable/btn_rounded"
		android:drawableLeft="@drawable/image_108"
		android:drawablePadding="8dp"
		android:paddingStart="50dp"
		android:text="Scan Brand"
		android:fontFamily="@font/montserratbold"
		android:textColor="@color/black"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.614"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/shoeBrandButton" />

	<Button
		android:id="@+id/shoeSizingButton"
		android:layout_width="356dp"
		android:layout_height="99dp"
		android:layout_marginTop="16dp"
		android:background="@drawable/btn_rounded"
		android:drawableLeft="@drawable/image_110"
		android:drawablePadding="8dp"
		android:fontFamily="@font/montserratbold"
		android:paddingStart="50dp"
		android:text="Shoe Sizing"
		android:textColor="@color/black"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.648"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/scanBrandButton" />

</androidx.constraintlayout.widget.ConstraintLayout>